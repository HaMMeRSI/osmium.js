{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "lib",
		"sourceMap": true,
		"alwaysStrict": true,
		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"typeRoots": ["./node_modules/@types/"],
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules", "lib"]
}
